{
    "name": "lightpack/lightpack",
    "description": "LightPack - PHP MVC Framework",
    "type": "project",
    "license": "MIT",
    "keywords": [
        "PHP",
        "full stack",
        "mvc",
        "database",
        "orm",
        "framework",
        "lightweight",
        "small"
      ],
    "authors": [
        {
            "name": "Pradeep Tiwari",
            "email": "pt21388@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Framework\\": "framework/",
            "Modules\\": "modules/",
            "App\\": "app/"
        },
        "files": [
            "framework/utilities.php"
        ],
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5"
    },
    "scripts": {
		"post-update-cmd": [
			"@composer dump-autoload"
		]
	}
}
